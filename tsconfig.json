{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@qwqui/build": [
        "./packages/build"
      ],
      "@qwqui/*": [
        "./packages/components/*"
      ],
      "@qwqui/theme": [
        "./packages/theme/index.scss"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "lib": ["ES2015.Promise", "ES2015", "DOM"]
  },
  "exclude": [
    "node_modules",
    "**/node_modules"
  ],
  "include": [
    "packages/**/*",
    "internal/*"
  ]
}